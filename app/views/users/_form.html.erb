

<div class="col-md-4 col-md-offset-4">

    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	  </div>

			  	<div class="panel-body">
			    	<%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
              <fieldset>
			    	  	<div class="form-group">
			    		    <%= f.text_field :login, class: 'form-control span3', placeholder: 'Username' %>
			    		  </div>

  			    		<div class="form-group">
  			    			<%= f.text_field :email, class: 'form-control span3', placeholder: 'your email' %>
  			    		</div>

                <div class="form-group">
                  <%= f.text_field :name, class: 'form-control span3', placeholder: 'your name' %>
                </div>

                <%= f.submit 'Sign up for WebApp', class: 'btn btn-lg btn-success btn-block' %>

			    	 </fieldset>
			     <% end %>
			    </div>
			</div>
		</div>
